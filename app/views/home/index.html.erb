                    <li class="nav-item">
                      <h4 class="card-title text-center"><%= p.name %></h4>
                    </li>
                  </ul>
                </div>
                  <div class="card-body">
                    <h4> Etat: <%= p.condition%></h4>
                    <h5> Prix :<%= p.price %> € </h5>
                    <br>
