 <div class="card text-center">
         <div class="card-header ">
                   <h1 class="card-title" style="color: black;" ><b>Vendre sa photo </h1>
                </div>
<center>
<%= form_with(model: picture, local: true) do |form| %>
  <% if picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description,class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price,class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :condition %>
    <%= form.text_field :condition,class: "form-control" %>
  </div>


  <p>Upload</p>
  <%= form.label :chat_pic %>
    <%= form.file_field :chat_pic %>

<br>

  <div class="actions">
    <%= form.submit"Mettre en vente",class:"btn-outline-success"%>
  </div>

<% end %>
</center>
